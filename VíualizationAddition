#DoctorPharmacistLinechartDeveloped
# Importing necessary libraries
import pandas as pd
import matplotlib.pyplot as plt

# Read data from CSV files
medDoc = pd.read_csv('doctors.csv')
pharm = pd.read_csv('pharmacist.csv')

# Merge doctor and pharmacist data
medProf = medDoc.merge(pharm, on=['Location', 'Period'], how='inner')

# Calculate total density
medProf['Total Density'] = medProf['First Tooltip_x'] + medProf['First Tooltip_y']
medProf = medProf[medProf['Period'] >= 2000]
# Filter data for five specific countries
countries = [ 'Germany', 'France', 'Switzerland']
filtered_data = medProf[medProf['Location'].isin(countries)]

# Pivot the data to prepare for plotting
pivot_data = filtered_data.pivot(index='Period', columns='Location', values='Total Density')

# Plotting line chart
plt.figure(figsize=(12, 8))

for country in countries:
    plt.plot(pivot_data.index, pivot_data[country], label=country)

# Adding labels and title
plt.xlabel('Year')
plt.ylabel('Total Density')
plt.title('Total Density of Doctors and Pharmacists for Five Specific Countries')
plt.legend()
plt.grid(True)
plt.xticks([2000, 2010, 2015, 2019])
# Show plot
plt.tight_layout()
plt.show()


#DoctorPharmacistLinechartDeveloping
# Importing necessary libraries
import pandas as pd
import matplotlib.pyplot as plt

# Read data from CSV files
medDoc = pd.read_csv('doctors.csv')
pharm = pd.read_csv('pharmacist.csv')

# Merge doctor and pharmacist data
medProf = medDoc.merge(pharm, on=['Location', 'Period'], how='inner')

# Calculate total density
medProf['Total Density'] = medProf['First Tooltip_x'] + medProf['First Tooltip_y']
medProf = medProf[medProf['Period'] >= 2010]
# Filter data for five specific countries
countries = ['Sri Lanka', 'Turkey', 'Zimbabwe']
filtered_data = medProf[medProf['Location'].isin(countries)]

# Pivot the data to prepare for plotting
pivot_data = filtered_data.pivot(index='Period', columns='Location', values='Total Density')

# Plotting line chart
plt.figure(figsize=(12, 8))

for country in countries:
    plt.plot(pivot_data.index, pivot_data[country], label=country)

# Adding labels and title
plt.xlabel('Year')
plt.ylabel('Total Density')
plt.title('Total Density of Doctors and Pharmacists for Five Specific Countries')
plt.legend()
plt.grid(True)
plt.xticks([ 2010, 2015, 2019])
# Show plot
plt.tight_layout()
plt.show()


#ExpectancyLinechartDeveloped
# Importing necessary libraries
import pandas as pd
import matplotlib.pyplot as plt

# Read data from CSV file
lifeExp = pd.read_csv('expectancy.csv')

# Filter data for the specified countries
countries = ['Germany', 'France', 'Switzerland']
filtered_data = lifeExp[lifeExp['Location'].isin(countries)]
# Remove duplicate entries
filtered_data = filtered_data.drop_duplicates(subset=['Period', 'Location'])

# Pivot the data to prepare for plotting
pivot_data = filtered_data.pivot(index='Period', columns='Location', values='First Tooltip')


# Plotting line chart
plt.figure(figsize=(10, 6))

for country in countries:
    plt.plot(pivot_data.index, pivot_data[country], label=country)

# Adding labels and title
plt.xlabel('Year')
plt.ylabel('Life Expectancy')
plt.title('Life Expectancy for 3 Specific Countries')
plt.legend()
plt.grid(True)

# Set x-ticks to match the specified years
plt.xticks(pivot_data.index.unique())

# Show plot
plt.tight_layout()
plt.show()


